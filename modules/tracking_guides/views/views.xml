<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="history_guide_list">
      <field name="name">tracking_guides list</field>
      <field name="model">tracking_guides.history_guide</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name_recip"/>
          <field name="phone_number"/>
          <field name="address"/>
          <field name="description"/>
          <field name="shipping_details_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="history_guide_form_view">
      <field name="name">history.guide.form</field>
      <field name="model">tracking_guides.history_guide</field>
      <field name="arch" type="xml">
        <form auto_save="false">
          <sheet>
            <group>
              <field name="name_recip"/>
              <field name="phone_number"/>
              <field name="address"/>
              <field name="description"/>
            </group>
            <group class="col-5   ">
              <field name="shipping_details_ids">
                <tree editable="bottom">
                  <field name="shipping_type" class="o_field_widget"/>
                  <field name="pieces" class="o_field_widget" autofocus="1"/>
                  <field name="weight" class="o_field_widget"/>
                </tree>
              </field>
            </group>
            <!-- <footer> -->
              <!-- <button name="call_api_and_save" type="object" string="Llamar API y Guardar" class="btn-primary"/> -->
            <!-- </footer> -->
          </sheet>
        </form>
      </field>
    </record>

        <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="history_guide_guide_list">
      <field name="name">tracking_guides window</field>
      <field name="res_model">tracking_guides.history_guide</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
