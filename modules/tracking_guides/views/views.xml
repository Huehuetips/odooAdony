<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="tracking_guides.list">
      <field name="name">tracking_guides list</field>
      <field name="model">tracking_guides.tracking_guides</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name_recip"/>
          <field name="phone_number"/>
          <field name="address"/>
          <field name="description"/>
          <field name="shipping_details_ids"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="history_guide_form_view">
      <field name="name">history.guide.form</field>
      <field name="model">tracking_guides.history_guide</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name_recip"/>
              <field name="phone_number"/>
              <field name="address"/>
              <!-- <field name="description"/> -->
            </group>
            <group>
              <field name="shipping_details_ids">
                <tree editable="bottom">
                  <field name="pieces"/>
                  <field name="shipping_type"/>
                  <field name="weight"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
