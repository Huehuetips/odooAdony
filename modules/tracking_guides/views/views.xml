    <!-- Top menu item -->
    <menuitem name="tracking_guides" id="tracking_guides.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Lista de Guías" id="tracking_guides.menu_1" parent="tracking_guides.menu_root"/>
    <!-- <menuitem name="Generar Guías" id="tracking_guides.menu_2" parent="tracking_guides.menu_root"/> -->
    <!-- actions -->
    <menuitem name="List" id="tracking_guides.menu_1_list" parent="tracking_guides.menu_1"
              action="history_guide_guide_list"/>
    <!-- <menuitem name="Server to list" id="tracking_guides" parent="tracking_guides.menu_2" action="tracking_guides.action_server"/> -->
  </data>
</odoo>
