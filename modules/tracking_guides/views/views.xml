<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="tracking_guides_list">
      <field name="name">tracking_guides list</field>
      <field name="model">tracking_guides.history_guide</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name_recip"/>
          <field name="phone_number"/>
          <field name="address"/>
          <field name="description"/>
          <field name="shipping_details_ids"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="history_guide_form_view">
      <field name="name">history.guide.form</field>
      <field name="model">tracking_guides.history_guide</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name_recip"/>
              <field name="phone_number"/>
              <field name="address"/>
              <field name="description"/>
            </group>
            <group>
              <field name="shipping_details_ids">
                <tree editable="bottom">
                  <field name="pieces"/>
                  <field name="shipping_type"/>
                  <field name="weight"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="tracking_guides.action_window">
      <field name="name">Tracking de GuÃ­as</field>
      <field name="res_model">tracking_guides.history_guide</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->
    <menuitem name="tracking_guides" id="tracking_guides.menu_root"/>
    <!-- menu categories -->
    <menuitem name="lIST" id="tracking_guides.menu_1" parent="tracking_guides.menu_root" action="tracking_guides.action_window"/>

  </data>
</odoo>
